<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:paddingBottom="@dimen/activity_vertical_margin"
    tools:paddingLeft="@dimen/activity_horizontal_margin"
    tools:paddingRight="@dimen/activity_horizontal_margin"
    tools:paddingTop="@dimen/activity_vertical_margin">

    <com.teinproductions.tein.pitrainer.Keyboard
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/integerPart_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                tools:text="3." />

            <TextView
                android:id="@+id/timer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="38sp"
                tools:text="00:31" />

            <ImageButton
                android:id="@+id/restart_button"
                android:layout_width="56sp"
                android:layout_height="56sp"
                android:background="@null"
                android:contentDescription="@string/restart"
                android:scaleType="fitCenter"
                tools:src="@mipmap/ic_refresh_white_36dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/input_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerLayout"
            android:maxLines="8"
            android:numeric="integer"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/digits_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_editText"
            android:textSize="22sp"
            tools:text="Digits: 0" />
    </RelativeLayout>
</LinearLayout>
