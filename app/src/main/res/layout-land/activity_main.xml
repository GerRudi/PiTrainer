<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_material_dark"
        android:elevation="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.teinproductions.tein.pitrainer.Keyboard
            android:id="@+id/keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/integerPart_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="42sp" />

            <ImageButton
                android:id="@+id/refresh_button"
                android:layout_width="42sp"
                android:layout_height="42sp"
                android:layout_alignBottom="@id/integerPart_textView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:contentDescription="@string/restart"
                android:onClick="onClickRestart"
                android:scaleType="fitCenter" />

            <EditText
                android:id="@+id/input_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/integerPart_textView"
                android:hint="@string/lets_see_what_you_can_do"
                android:maxLines="8"
                android:numeric="integer"
                android:textSize="24sp" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_editText"
                android:layout_marginTop="8dp">

                <TableRow>

                    <TextView
                        android:text="@string/digits_colon"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/digits_textView"
                        android:textSize="22sp" />
                </TableRow>

                <TableRow android:layout_marginTop="4dp">

                    <TextView
                        android:text="@string/errors_colon"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/errors_textView"
                        android:textSize="22sp" />
                </TableRow>

                <TableRow android:layout_marginTop="4dp">

                    <TextView
                        android:text="@string/percentage_colon"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/percentage_textView"
                        android:textSize="22sp" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

