    <TableRow>

        <Button
            android:id="@+id/button4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:text="4"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:text="5"
            android:textSize="26sp" />

        <Button
            android:id="@+id/button6"
