        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:text="3"
            android:textSize="26sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/button0"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:text="0"
            android:textSize="26sp" />

        <Button
            android:id="@+id/buttonBackspace"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:text="&lt;--"
            android:textSize="26sp" />
